@model LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = "Codigo de verificacion";
}

    <h2>Codigo de verificacion</h2>
<hr />
<p>
    Has solicitado iniciar sesión con un código de recuperación. Este inicio de sesión no será recordado hasta que usted proporcione
    un código de aplicación de autenticador al iniciar sesión o desactivar 2FA y volver a iniciar sesión.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecoveryCode"></label>
                <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}